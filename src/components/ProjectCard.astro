---
interface Props {
    imgSrc: string;
    altText: string;
    title: string;
    description: string;
    end: "Backend" | "Frontend" | "Fullstack";
    stack: string[];
}

const { imgSrc, altText, title, description, end, stack } = Astro.props as Props;
---
<div class="max-w-sm bg-slate-200 dark:bg-(--midnight-blue) rounded-2xl flex flex-col items-center p-2 border border-(--dusty-blue)">
    <div class="relative hover:scale-101 transition-transform duration-300">

        <div class="absolute rounded-full top-2 left-6 z-50 bg-linear-to-r from-purple-200  to-violet-800 p-0.5 flex justify-center items-center">
            <div class="py-1 px-4 rounded-full dark:bg-(--midnight-blue)/80 bg-slate-200 backdrop-blur-xs">
                <p class="text-center">{end}</p>
            </div>
        </div>
        <img src={imgSrc} alt={altText} class="rounded-xl m-0"/>
    </div>
    
    <div class="w-full p-6">
        <h3 class="text-start text-xl text-violet-500">{title}</h3>
        <p class="">{description}</p>
    </div>
    
    <div class="w-full flex gap-1 px-6 py-2 flex-wrap">
        {stack.map((tech) => (
            <span class="dark:bg-(--deep-navy) bg-slate-100 rounded-full px-3 py-1 text-sm ">{tech}</span>
        ))}
    </div>
</div>